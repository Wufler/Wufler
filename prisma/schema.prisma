generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "linux-musl", "rhel-openssl-3.0.x"]
  output        = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Projects {
  id          Int      @id @default(autoincrement())
  title       String
  subtitle    String?
  description String?
  images      String[]
  href        String?
  category    String
  status      String[]
  tags        String[]
  visible     Boolean
  createdAt   DateTime @default(now())
  updatedAt   DateTime @default(now()) @updatedAt
}

model Builds {
  id          Int      @id @default(autoincrement())
  title       String
  description String?
  img         String?
  status      String[]
  tags        String[]
  visible     Boolean
  createdAt   DateTime @default(now())
  updatedAt   DateTime @default(now()) @updatedAt
}
